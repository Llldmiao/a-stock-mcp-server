# 包含重要文档和配置文件
include README.md
include LICENSE
include CHANGELOG.md
include MCP_USAGE_GUIDE.md
include requirements.txt
include requirements-dev.txt
include mcp_config.json
include MANIFEST.in

# 包含文档目录
recursive-include docs *.md

# 包含示例目录
recursive-include examples *.py

# 包含测试目录
recursive-include tests *.py

# 排除不需要的文件
exclude .gitignore
exclude .DS_Store
exclude __pycache__
exclude *.pyc
exclude *.pyo
exclude *.pyd
exclude .Python
exclude env
exclude venv
exclude .env
exclude .venv
exclude build.py
exclude quick_start.sh
exclude *.egg-info
exclude build
exclude dist
